# YouTube Live Chat Collector - React.js Environment Variables
# Generated by Ansible at {{ ansible_date_time.iso8601 }}
# Environment: {{ environment | default('dev') }}

# API Configuration
REACT_APP_API_BASE_URL={{ api_base_url }}
REACT_APP_API_KEY={{ api_key_value }}

# Application Configuration
REACT_APP_APP_NAME=YouTube Live Chat Collector
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT={{ environment | default('dev') }}

# Feature Flags
{% if environment == 'dev' %}
REACT_APP_DEBUG=true
{% else %}
REACT_APP_DEBUG=false
{% endif %}

# UI Configuration
REACT_APP_REFRESH_INTERVAL=30000
REACT_APP_MAX_COMMENTS_PER_PAGE=100

# Build Configuration
GENERATE_SOURCEMAP=false
{% if environment == 'prod' %}
REACT_APP_ENABLE_ANALYTICS=true
{% else %}
REACT_APP_ENABLE_ANALYTICS=false
{% endif %}

# Deployment Information
REACT_APP_BUILD_TIME={{ ansible_date_time.iso8601 }}
REACT_APP_ANSIBLE_MANAGED=true
